@{
    ViewData["Title"] = "Home Page";
}
@{
    ViewData["Title"] = "Dashboard";
}

<section class="pb-4 pb-md-5 bg-light">
    <div class="container">
        <div class="row gy-4">

            <!-- Devices -->
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card border-0 shadow-sm rounded-3 stat-card h-100">
                    <div class="card-body d-flex flex-column align-items-start p-4">
                        <div class="d-flex align-items-center justify-content-between w-100 mb-3">
                            <h6 class="text-muted fw-semibold mb-0">Devices</h6>
                            <div class="icon-circle bg-primary text-white shadow-sm">
                                <i class="bi bi-laptop fs-5"></i>
                            </div>
                        </div>
                        <h3 class="fw-bold text-dark">6,820</h3>
                        <span class="badge bg-success-subtle text-success rounded-pill mt-2">
                            +12% this month
                        </span>
                    </div>
                </div>
            </div>

            <!-- Faulty Devices -->
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card border-0 shadow-sm rounded-3 stat-card h-100">
                    <div class="card-body d-flex flex-column align-items-start p-4">
                        <div class="d-flex align-items-center justify-content-between w-100 mb-3">
                            <h6 class="text-muted fw-semibold mb-0">Faulty Devices</h6>
                            <div class="icon-circle bg-danger text-white shadow-sm">
                                <i class="bi bi-exclamation-triangle fs-5"></i>
                            </div>
                        </div>
                        <h3 class="fw-bold text-dark">1,245</h3>
                        <span class="badge bg-danger-subtle text-danger rounded-pill mt-2">
                            +8% this week
                        </span>
                    </div>
                </div>
            </div>

            <!-- Assigned Devices -->
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card border-0 shadow-sm rounded-3 stat-card h-100">
                    <div class="card-body d-flex flex-column align-items-start p-4">
                        <div class="d-flex align-items-center justify-content-between w-100 mb-3">
                            <h6 class="text-muted fw-semibold mb-0">Assigned Devices</h6>
                            <div class="icon-circle bg-success text-white shadow-sm">
                                <i class="bi bi-person-check fs-5"></i>
                            </div>
                        </div>
                        <h3 class="fw-bold text-dark">3,764</h3>
                        <span class="badge bg-success-subtle text-success rounded-pill mt-2">
                            +5% growth
                        </span>
                    </div>
                </div>
            </div>

            <!-- Unassigned Devices -->
            <div class="col-12 col-sm-6 col-xl-3">
                <div class="card border-0 shadow-sm rounded-3 stat-card h-100">
                    <div class="card-body d-flex flex-column align-items-start p-4">
                        <div class="d-flex align-items-center justify-content-between w-100 mb-3">
                            <h6 class="text-muted fw-semibold mb-0">Unassigned Devices</h6>
                            <div class="icon-circle bg-warning text-white shadow-sm">
                                <i class="bi bi-box-seam fs-5"></i>
                            </div>
                        </div>
                        <h3 class="fw-bold text-dark">786</h3>
                        <span class="badge bg-warning-subtle text-warning rounded-pill mt-2">
                            -2% this week
                        </span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Small CSS Enhancements -->
<style>
    .stat-card {
        transition: all 0.2s ease-in-out;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

    .icon-circle {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

